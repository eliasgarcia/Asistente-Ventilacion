<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditarIngestaActivity">

    <ProgressBar
        android:id="@+id/pgbEditarIngesta"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="241dp"
        android:layout_height="254dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTipoIngesta"
            android:layout_width="212dp"
            android:layout_height="40dp"
            android:text="MEDICAMENTO"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtIngestaNombreNuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtIngestaFrecuenciaNuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:ems="10"
            android:hint="Frecuencia"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="241dp"
            android:layout_height="60dp"
            android:layout_marginTop="30sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnConfirmarIngesta"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:background="#1AA90D"
                android:text="Confirmar" />

            <Button
                android:id="@+id/btnCancelarIngesta"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:background="#F4511E"
                android:text="Cancelar" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>